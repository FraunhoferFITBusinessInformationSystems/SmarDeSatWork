<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_job_progress_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/view_error_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/view_error_image_text"
        android:src="@drawable/ic_warning_black_24dp"
        android:tint="@color/textSuperLight" />

    <TextView
        android:id="@+id/view_error_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_error_image"
        android:scaleType="center"
        android:text="@string/view_error_text"
        android:textAlignment="center"
        android:textColor="@color/textSuperLight"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/view_error_subtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_error_text"
        android:layout_marginTop="5dp"
        android:scaleType="center"
        android:text="@string/view_error_subtext"
        android:textAlignment="center"
        android:textColor="@color/textSuperLight"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/view_error_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_error_subtext"
        android:layout_marginTop="5dp"
        android:scaleType="center"
        android:textAlignment="center"
        android:textColor="@color/textSuperLight"
        android:textSize="8sp"
        tools:ignore="SmallSp" />

</RelativeLayout>