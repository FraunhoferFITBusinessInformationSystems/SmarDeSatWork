<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="3"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/comp_value_display_plain_display_name"
        android:layout_column="0"
        android:layout_gravity="start|top"
        android:layout_row="0"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Temperature" />

    <TextView
        android:id="@+id/comp_value_display_plain_name"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_gravity="end|top"
        tools:text="S1 TEMP 01A76534" />

    <TextView
        android:id="@+id/comp_value_display_plain_min"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_gravity="start|bottom"
        tools:text="Min: 20,0 °C" />

    <TextView
        android:id="@+id/comp_value_display_plain_max"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_gravity="end|bottom"
        tools:text="Max: 30,0 °C" />

    <TextView
        android:id="@+id/comp_value_display_plain_value"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal|center|center_vertical|center_horizontal"
        android:layout_margin="5dp"
        android:layout_row="1"
        android:layout_columnSpan="2"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="23,45°C" />

</GridLayout>