<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="6dp"
    android:columnCount="2"
    android:rowCount="4">

    <TextView
        android:id="@+id/job_list_entry_title"
        tools:text="Reparaturauftrag"
        android:layout_column="0"
        android:layout_gravity="start|top"
        android:layout_row="0"
        android:layout_columnSpan="2"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/job_list_entry_date"
        tools:text="28.02.2018 16:45"
        android:layout_column="0"
        android:layout_gravity="end|top"
        android:layout_row="2"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/job_list_entry_state"
        tools:text="In Bearbeitung"
        android:layout_column="1"
        android:layout_gravity="end|top"
        android:layout_row="2"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/job_list_entry_subtitle"
        tools:text="Werkzeugbruch an Maschine Raster 200"
        android:textSize="14sp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="start|top"
        android:layout_row="1" />

    <View
        android:background="@color/textDarkSecondary"
        android:layout_marginTop="4dp"
        android:layout_height="1dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="start|bottom|end"
        android:layout_row="3"
        />


</GridLayout>